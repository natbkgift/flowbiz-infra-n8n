# Runtime Configuration (APP_*)
APP_ENV=dev
APP_HOST=127.0.0.1
APP_PORT=8000
APP_LOG_LEVEL=info

# Metadata (FLOWBIZ_*)
FLOWBIZ_SERVICE_NAME=flowbiz-template-service
FLOWBIZ_VERSION=0.1.0
FLOWBIZ_BUILD_SHA=local

# Jobs API limits (JOBS_*)
